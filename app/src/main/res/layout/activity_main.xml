<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:gravity="center" android:orientation="vertical"
        android:background="@drawable/main_bg" android:backgroundTint="#908E9B" android:backgroundTintMode="multiply">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_msg"
            android:id="@+id/textView" android:layout_marginBottom="50dp" android:textSize="18sp"
            android:outlineProvider="paddedBounds" android:textColor="#ECEFF1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:paddingLeft="20dp" android:paddingRight="20dp"
            android:layout_marginTop="25dp" android:layout_marginBottom="25dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/serverIPText" android:layout_weight="1" android:hint="Server IP"
                android:layout_marginRight="15dp" android:backgroundTint="#FFFFFF" android:backgroundTintMode="add"
                android:textColor="#00FFFFFF" android:textColorHint="#707070"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/serverPortText" android:layout_weight="1" android:hint="Server Port"
                android:layout_marginRight="15dp" android:textColor="#FFFFFF" android:textColorHint="#707070"
                android:backgroundTint="#FFFFFF"/>
    </LinearLayout>
    <Button
            android:text="Continuar"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeButton"
            android:layout_marginTop="50dp"/>

</LinearLayout>